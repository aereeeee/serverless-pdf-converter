{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["es2020"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports":true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "lib"
  },
  "include": ["src/**/*.ts", "serverless.ts"],
  "exclude": [
    "tests/*",
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
